<Window x:Class="InRetail.Shell.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.codeplex.com/CompositeWPF"
    xmlns:Trash="clr-namespace:InRetail.Shell.Trash"
    Title="Window1" >
    <Window.Resources>
        <Trash:ListLeagueList x:Key="MyList"/>
        <HierarchicalDataTemplate DataType    = "{x:Type Trash:League}"
                                ItemsSource = "{Binding Path=Divisions}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType    = "{x:Type Trash:Division}"
                                ItemsSource = "{Binding Path=Teams}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>

        <DataTemplate DataType="{x:Type Trash:Team}">
            <TextBlock Text="{Binding Path=Name}"/>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            
            <TreeView DockPanel.Dock="Left" >
                <TreeViewItem ItemsSource="{Binding Source={StaticResource MyList}}" Header="My Soccer Leagues" />
            </TreeView>
            <TabControl  cal:RegionManager.RegionName="mainRegion">
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
