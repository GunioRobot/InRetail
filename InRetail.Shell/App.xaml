<Application x:Class="InRetail.Shell.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Menus="clr-namespace:InRetail.Shell.Menus">
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="pack://application:,,,/InRetail.ProductCatalog;Component/ResourceDictionary.xaml"/>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type Menus:MenuViewModel}">
                        <Menus:MenuView/>
                    </DataTemplate>
                </ResourceDictionary>
    		</ResourceDictionary.MergedDictionaries>
    	</ResourceDictionary>
    </Application.Resources>
</Application>
