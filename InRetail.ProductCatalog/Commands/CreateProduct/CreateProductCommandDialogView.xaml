<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="InRetail.ProductCatalog.Commands.CreateProduct.CreateProductCommandDialogView"
    mc:Ignorable="d" d:DesignWidth="331" d:DesignHeight="372">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Product Description:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Text="{Binding Message.Description,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0"/>
        <Button Command="{Binding SendCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Create" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</UserControl>
